{
  "name": "simple-crud-api",
  "version": "1.0.0",
  "description": "[Assignment link](https://github.com/AlreadyBored/nodejs-assignments/blob/main/assignments/crud-api/assignment.md)",
  "main": "index.js",
  "scripts": {
    "start": "node app.ts",
    "start:dev": "nodemon app.ts",
    "start:prod": "cross-env NODE_ENV=production webpack --config webpack.config.ts",
    "multi": "nodemon multi.ts",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "build": "cross-env webpack --config webpack.config.ts",
    "develop": "webpack-dev-server --mode development",
    "test": "cross-env NODE_ENV=test jest -c ./jest.config.json --forceExit",
    "test:coverage": "jest --coverage -c ./jest.config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekater1na/simple-crud-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ekater1na/simple-crud-api/issues"
  },
  "homepage": "https://github.com/ekater1na/simple-crud-api#readme",
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^28.1.2",
    "@types/node": "^17.0.42",
    "@types/supertest": "^2.0.12",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "cross-env": "^7.0.3",

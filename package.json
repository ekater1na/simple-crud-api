    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "uuid": "^8.3.2",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
